html 
    head
        title=title
        script(src="")
        link(rel="stylesheet", href="/css/stylesOrders.css")
        link(rel="stylesheet", href="/css/stylesMenu.css")
    body
        div(class=["myContainer","roundedCorner"])
            h1(id="myH1")=h1Text
        div(class="centerContainer")
            ul(class="categories")
                    li(class="homeT"): a(href="/") Home   
                    li(class="contactT"): a(href="/contactUs") Contact Us  
                    li(class="rosterT"): a(href="/roster") Roster   
                    li(class="recordsT"): a(href="/records") Previous Season    
                    li(class="ordersT"): a(href="/orders") Store
                    li(class="additem"): a(href="/additem") AddItem
        div(class="addItemToDB")
            form(class="inputForm" method='POST' action='/addItemToDB' name='formInput')
                div
                    label(for='imageUrl') Url of image:
                    input(type='text', placeholder='image location' name='imageUrl')
                div
                    label(for='item') Name of item:
                    input(type='text', placeholder='name of item' name='item')
                div
                    label(for='price') Price of the item:
                    input(type='text', placeholder='price of item' name='price')
                button(type='submit') Add To DB